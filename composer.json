    "require": {
        "php" : "~5.4|~7.0",
        "psr/log": "~1.0"
    },

    "require-dev": {
        "fabpot/php-cs-fixer": "~1.0"
    },

    "autoload": {
        "psr-4": {
            "WZRD\\Contracts\\": "src/"
        }
    },

    "scripts": {
        "test": "phpunit",
